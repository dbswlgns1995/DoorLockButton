<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryDark"
        android:orientation="vertical"
        android:weightSum="4"
        tools:ignore="NestedWeights">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3">

            <LinearLayout
                android:id="@+id/ll_number__home"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="4dp"
                android:visibility="visible"
                android:weightSum="4"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/bt1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="2dp"
                        android:layout_weight="1"
                        android:background="@drawable/number_key_button"
                        android:text="1"
                        android:textColor="@color/white"
                        android:textSize="@dimen/number_key_text_size"/>

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/bt2"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="2dp"
                        android:layout_weight="1"
                        android:background="@drawable/number_key_button"
                        android:text="2"
                        android:textColor="@color/white"
                        android:textSize="@dimen/number_key_text_size"
                        
                        />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/bt3"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="2dp"
                        android:layout_weight="1"
                        android:background="@drawable/number_key_button"
                        android:text="3"
                        android:textColor="@color/white"
                        android:textSize="@dimen/number_key_text_size"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/bt4"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="2dp"
                        android:layout_weight="1"
                        android:background="@drawable/number_key_button"
                        android:text="4"
                        android:textColor="@color/white"
                        android:textSize="@dimen/number_key_text_size"
                        />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/bt5"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="2dp"
                        android:layout_weight="1"
                        android:background="@drawable/number_key_button"
                        android:text="5"
                        android:textColor="@color/white"
                        android:textSize="@dimen/number_key_text_size"
                        />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/bt6"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="2dp"
                        android:layout_weight="1"
                        android:background="@drawable/number_key_button"
                        android:text="6"
                        android:textColor="@color/white"
                        android:textSize="@dimen/number_key_text_size"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/bt7"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="2dp"
                        android:layout_weight="1"
                        android:background="@drawable/number_key_button"
                        android:text="7"
                        android:textColor="@color/white"
                        android:textSize="@dimen/number_key_text_size"
                        />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/bt8"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="2dp"
                        android:layout_weight="1"
                        android:background="@drawable/number_key_button"
                        android:text="8"
                        android:textColor="@color/white"
                        android:textSize="@dimen/number_key_text_size"
                        />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/bt9"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="2dp"
                        android:layout_weight="1"
                        android:background="@drawable/number_key_button"
                        android:text="9"
                        android:textColor="@color/white"
                        android:textSize="@dimen/number_key_text_size"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/bt10"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="2dp"
                        android:layout_weight="1"
                        android:background="@drawable/number_key_button"
                        android:text="*"
                        android:textColor="@color/white"
                        android:textSize="@dimen/number_key_text_size"
                        />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/bt0"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="2dp"
                        android:layout_weight="1"
                        android:background="@drawable/number_key_button"
                        android:text="0"
                        android:textColor="@color/white"
                        android:textSize="@dimen/number_key_text_size"
                        />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/bt11"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="2dp"
                        android:layout_weight="1"
                        android:background="@drawable/number_key_button"
                        android:text="#"
                        android:textColor="@color/white"
                        android:textSize="@dimen/number_key_text_size"
                        />

                </LinearLayout>

            </LinearLayout>



        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll_bell__home"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_info__home"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingTop="24dp"
                android:paddingBottom="24dp"
                android:paddingStart="8dp"
                android:layout_margin="4dp"
                android:background="@drawable/button_info_round"
                android:paddingEnd="8dp"
                android:text="@string/input_password"
                android:textColor="@color/colorAccent"
                android:textSize="34sp" />

        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>